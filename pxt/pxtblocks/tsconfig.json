{
    "compilerOptions": {
        "target": "es2017",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "outDir": "../built/pxtblocks",
        "rootDir": ".",
        "newLine": "LF",
        "sourceMap": false,
        "moduleResolution": "node",
        "isolatedModules": false,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "lib": [
            "dom",
            "dom.iterable",
            "scripthost",
            "es2017",
            "ES2018.Promise"
        ],
        "types": [
            "resize-observer-browser"
        ],
        "incremental": false,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}